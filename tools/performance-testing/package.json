{
  "name": "@starter-template-dna/performance-testing",
  "version": "1.0.0",
  "description": "Comprehensive performance testing and optimization suite for DNA templates",
  "type": "module",
  "scripts": {
    "test:load": "node scripts/run-load-tests.js",
    "test:load:api": "k6 run load-tests/api-performance.js",
    "test:load:web": "lighthouse-ci",
    "test:load:mobile": "detox test -c mobile-performance",
    "test:regression": "node scripts/run-regression-tests.js",
    "test:performance": "npm run test:load && npm run test:regression",
    "optimize": "node scripts/run-optimization-engine.js",
    "monitor": "node scripts/start-monitoring.js",
    "budgets:check": "node scripts/check-performance-budgets.js",
    "budgets:update": "node scripts/update-performance-budgets.js",
    "report:generate": "node scripts/generate-reports.js",
    "dashboard": "node scripts/start-dashboard.js",
    "setup": "node scripts/setup-performance-suite.js",
    "baseline:create": "node scripts/create-baseline.js",
    "baseline:compare": "node scripts/compare-baseline.js",
    "ci:validate": "node scripts/ci-performance-validation.js"
  },
  "dependencies": {
    "k6": "^0.47.0",
    "@lighthouse-ci/cli": "^0.12.1",
    "artillery": "^2.0.3",
    "detox": "^20.13.5",
    "autocannon": "^7.12.0",
    "clinic": "^13.0.0",
    "0x": "^5.5.0",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "prometheus-api-metrics": "^3.2.2",
    "prom-client": "^15.0.0",
    "winston": "^3.11.0",
    "lodash": "^4.17.21",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "playwright": "^1.40.1",
    "puppeteer": "^21.5.2",
    "chrome-launcher": "^1.1.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/lodash": "^4.14.202",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "bin": {
    "dna-perf": "./scripts/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "performance",
    "testing",
    "optimization",
    "monitoring",
    "load-testing",
    "regression-testing"
  ],
  "author": "DNA Template Team",
  "license": "MIT"
}