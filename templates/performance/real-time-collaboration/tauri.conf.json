{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "{{projectName}}",
  "version": "1.0.0",
  "identifier": "{{appIdentifier}}",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: blob: https: wss: ws:; connect-src 'self' https: wss: ws: blob:; font-src 'self' data:; img-src 'self' data: blob: https:; media-src 'self' data: blob: https:; object-src 'none'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; style-src 'self' 'unsafe-inline';"
    },
    "windows": [
      {
        "title": "{{projectName}} - Real-time Collaboration",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "focus": true,
        "transparent": false,
        "visible": true,
        "center": true,
        "webSecurity": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "copyright": "Copyright Â© 2025 {{author}}",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "High-performance real-time collaboration platform with operational transformation, WebRTC peer-to-peer connections, and sub-150ms latency for concurrent document editing.",
    "shortDescription": "Real-time collaboration platform",
    "resources": [],
    "deb": {
      "depends": [],
      "section": "Office"
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "endpoints": ["https://your-update-server.com/releases"],
      "dialog": true,
      "pubkey": "YOUR_UPDATER_SIGNATURE_PUBKEY_HERE"
    }
  }
}