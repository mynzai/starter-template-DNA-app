# Environment variables template for {{project.pascalName}}
# Copy this file to .env.local and fill in your actual values

# Application
NEXT_PUBLIC_APP_NAME={{project.pascalName}}
NEXT_PUBLIC_APP_URL=http://localhost:3000

{{#hasModule 'ai-openai'}}
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_organization_id_here
{{/hasModule}}

{{#hasModule 'payments-stripe'}}
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
{{/hasModule}}

{{#hasModule 'auth-jwt'}}
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d
{{/hasModule}}

# Database Configuration (if applicable)
DATABASE_URL=postgresql://username:password@localhost:5432/{{project.snakeName}}

{{#hasModule 'real-time-websocket'}}
# WebSocket Configuration
WEBSOCKET_PORT=3001
{{/hasModule}}

# Email Configuration (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (if applicable)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
SENTRY_DSN=your_sentry_dsn