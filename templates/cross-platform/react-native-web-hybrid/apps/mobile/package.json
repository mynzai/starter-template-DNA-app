{
  "name": "@hybrid/mobile",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "build": "npm run build:android && npm run build:ios",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "xcodebuild -workspace ios/HybridApp.xcworkspace -scheme HybridApp -configuration Release -destination generic/platform=iOS -archivePath ios/build/HybridApp.xcarchive archive",
    "bundle:android": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "bundle:ios": "npx react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/bundle/main.jsbundle",
    "pod-install": "cd ios && pod install",
    "clean": "react-native clean-project-auto",
    "reset-cache": "npx react-native start --reset-cache",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "deploy": "npm run deploy:android && npm run deploy:ios",
    "deploy:android": "cd android && ./gradlew bundleRelease && fastlane supply",
    "deploy:ios": "cd ios && fastlane beta"
  },
  "dependencies": {
    "@hybrid/shared-components": "*",
    "@hybrid/shared-navigation": "*",
    "@hybrid/shared-utils": "*",
    "react": "^18.2.0",
    "react-native": "^0.72.7",
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "react-native-screens": "^3.27.0",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-gesture-handler": "^2.13.4",
    "react-native-reanimated": "^3.6.0",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "react-native-keychain": "^8.1.3",
    "react-native-device-info": "^10.11.0",
    "react-native-vector-icons": "^10.0.2",
    "react-native-fast-image": "^8.6.3",
    "react-native-svg": "^13.14.0",
    "styled-components": "^6.1.1",
    "@react-native-community/netinfo": "^9.4.1",
    "react-native-orientation-locker": "^1.5.0",
    "react-native-share": "^9.4.1",
    "react-native-haptic-feedback": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/runtime": "^7.23.6",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@types/react": "^18.2.42",
    "@types/react-native": "^0.72.7",
    "@types/react-test-renderer": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.76.8",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.3.2",
    "detox": "^20.13.5",
    "flipper-plugin-redux-debugger": "^0.8.7",
    "reactotron-react-native": "^5.0.4",
    "reactotron-redux": "^3.1.9"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}