{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/testing/src",
  "projectType": "library",
  "tags": ["type:testing", "scope:core"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/testing",
        "main": "libs/testing/src/index.ts",
        "tsConfig": "libs/testing/tsconfig.lib.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/testing/jest.config.ts",
        "passWithNoTests": true,
        "coverageDirectory": "../../coverage/libs/testing"
      }
    }
  }
}